@require '../../theme/colors'

.list-item
    position relative
    padding-left 8% 

    @media screen and (max-width: 569px) 
        padding-left 50px

    &:before
        content "" 
        position absolute
        top 8px
        left 10px
        height 21px
        width @height
        border-radius 50% 
        background-color black 

    &__title
        display flex
        flex-wrap wrap 
        line-height 1.3em
        font-size 1.75rem
        text-transform uppercase

    &__name
        font-family myriad-pro-bold
        margin-right 2%

    &_default &__name
        color main-color

    &_black &__name
        color black
        font-weight bold

    &__date
        text-transform capitalize
        margin-right 2%

        &:before
            content: "//"
            padding 7px

    &__content
        margin-top 8px
        font-size 1.07rem