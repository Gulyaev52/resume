.layout 
    display flex  
    width 92% 
    padding 30px 0 
    margin 0 auto 
    min-width 400px

    &__column_left 
        width 39%

    &__column_right 
        width 55%
        margin-left 6% 

@media screen and (max-width: 930px)
    .layout
        flex-direction column
        align-items center

        &__column_left, &__column_right 
            width 100% 
            padding 0 5%

        &__column_right
            margin-left 0