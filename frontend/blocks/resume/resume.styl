.resume
    display flex   
    padding 25px 4% 
    margin 0 auto 
    min-width 400px
    max-width 1650px

    &__column_left
        width 37.3%
        margin-left 0.8%

    &__column_right 
        width 55%
        margin-left 6% 

    &__item
        margin-bottom 8% 

    &__personal-info
        margin-bottom 15%

@media screen and (max-width: 930px)
    .resume
        flex-direction column
        align-items center

        &__column_left, &__column_right 
            width 100% 
            padding 0 5%

        &__column_right
            margin-left 0